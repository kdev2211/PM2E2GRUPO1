<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E2GRUPO1.AggUbicacion">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="foto"/>
            <StackLayout Padding="5">
                <Label Text="Longitud Actual:"/>

                <Entry x:Name="longitud"/>
                <Label Text="Latitud actual:"/>
                <Entry x:Name="latitud"/>
                <Entry x:Name="descripcion" Placeholder="Descripcion" PlaceholderColor="Gray" />

                <Button Text="GUARDAR UBICACION" x:Name="guardarUbicacion" Clicked="guardarUbicacion_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>